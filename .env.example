# =============================================================================
# INTERESTING PEOPLE - Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# Set these in your deployment platform (Vercel, etc.) for production

# =============================================================================
# DATABASE (Required)
# =============================================================================
# PostgreSQL connection string
# Neon: postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
# Supabase: postgresql://postgres.[ref]:password@aws-0-region.pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://user:password@localhost:5432/interesting_people"

# =============================================================================
# SESSION / AUTH (Required)
# =============================================================================
# Session encryption key - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
SESSION_SECRET="your-session-secret-at-least-32-characters-long"

# Admin password for reviewer login (MVP auth)
# In production, use a strong password or implement OAuth
ADMIN_PASSWORD="change-this-in-production"

# =============================================================================
# OBJECT STORAGE - Cloudflare R2 (Required for video uploads)
# =============================================================================
# R2 API endpoint (format: https://<account-id>.r2.cloudflarestorage.com)
R2_ENDPOINT="https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com"

# R2 Access Key ID and Secret (create in R2 > Manage R2 API Tokens)
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""

# R2 Bucket name
R2_BUCKET_NAME="interesting-people-videos"

# Public URL for the bucket (R2.dev domain or custom domain)
R2_PUBLIC_URL="https://pub-xxx.r2.dev"

# Presigned URL expiry in seconds (default: 1 hour)
R2_PRESIGN_EXPIRY="3600"

# =============================================================================
# EMAIL VERIFICATION (Optional)
# =============================================================================
# Set to "true" to require email verification before video upload
ENABLE_EMAIL_VERIFICATION="false"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Maximum accepted applicants (default: 150)
ACCEPTED_CAP="150"

# =============================================================================
# OBSERVABILITY (Recommended for production)
# =============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=""

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL="info"

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Your production domain (used for metadata, emails)
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
